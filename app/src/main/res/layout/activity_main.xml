<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btnMyPhoneMember"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/my_phone_member"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        >
    </Button>

    <Button
        android:id="@+id/btnMyAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnMyPhoneMember"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/my_account"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        >
    </Button>

    <Button
        android:id="@+id/btnMyPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnMyAccount"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/my_password"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        >
    </Button>

    <Button
        android:id="@+id/btnExit"
        android:layout_below="@+id/btnMyPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        >
    </Button>

</RelativeLayout>

